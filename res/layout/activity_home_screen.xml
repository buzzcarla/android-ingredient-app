<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home">


    <ImageButton
        android:id="@+id/camButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/FIITTxt"
        android:layout_marginRight="150dp"
        android:layout_marginTop="15mm"
        android:background="@drawable/back"
        android:scaleType="fitCenter"
        android:src="@drawable/camera"/>

    <TextView
        android:id="@+id/photoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camButton"
        android:layout_alignRight="@+id/camButton"
        android:layout_below="@+id/camButton"
        android:background="#ffffff"
        android:text="Take Photo"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF958F8F"
        android:textIsSelectable="false"
        android:textSize="20dp" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/FIITTxt"
        android:layout_marginTop="15mm"
        android:layout_marginLeft="150dp"
        android:background="@drawable/back"
        android:onClick="sendMessage"
        android:scaleType="fitCenter"
        android:src="@drawable/searchicon"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:background="#ffffff"
        android:text="Search"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF958F8F"
        android:textSize="20dp" />



    <Button
        android:id="@+id/editPref"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#6BADDF"
        android:text="Edit Preferences"
        android:layout_alignParentBottom="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="FIIT"
        android:textColor="#000000"
        android:textSize="40dp"
        android:id="@+id/FIITTxt"/>


</RelativeLayout>